      <ul>
        <% if logged_in? %>
          <li><a href="/">Your Profile</a></li>
          <li><a href="/logout">Log Out</a></li>
        <% else %>
          <li><a href="/login">login</a></li>
          <li><a href="/register">register</a></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div id="content">
    <%= yield %>
  </div>
  <footer>
    <div class="center">
      <p id="copyright">&copy; King Kong Survey 2015 | Gorilla Icon by: <a href="http://www.freepik.com/free-photos-vectors/design">Freepik</a></p>
    </div>
